@model CheckBoxListInAspNetMVC.Models.Department

@{
    ViewBag.Title = "Details";
}

<style>
     ul {
         margin-bottom: 0px;
         padding-left: 0px;
     }
     ul li {
         display: inline;
     }
</style>

<h3>Details | Department </h3>
<hr/>

<div>
    <div class="input-group">
        @Html.LabelFor(model => model.Name, new {@class = "input-group-addon"})
        <div class="form-control">
            @Html.DisplayFor(model => model.Name)
        </div>
    </div>
    <br/>
    <div class="input-group">
        <label class="input-group-addon">Courses</label>
        <div class="form-control input-group-form-control">
            <ul>
                @foreach (var item in Model.Courses)
                {
                    <li>@item.Name</li> @:|
                }
            </ul>
        </div>
    </div>
</div>
<br/>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new {@class = "btn btn-default"}) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>
